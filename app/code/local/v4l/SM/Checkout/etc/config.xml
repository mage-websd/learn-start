<?xml version="1.0"?>
<config>
    <modules>
        <SM_Checkout>
            <version>0.1.0</version>
        </SM_Checkout>
    </modules>
    <global>
        <blocks>
            <checkout>
                <rewrite>
                    <onepage>SM_Checkout_Block_Onepage</onepage>
                </rewrite>
            </checkout>
        </blocks>
        <models>
            <sales>
                <rewrite>
                    <service_quote>SM_Checkout_Model_Quote</service_quote>
                </rewrite>
            </sales>
        </models>
    </global>
    <frontend>
        <routers>
            <checkout>
                <args>
                    <modules>
                        <sm_checkout before="Mage_Checkout">SM_Checkout</sm_checkout>
                    </modules>
                </args>
            </checkout>
        </routers>
    </frontend>
</config>