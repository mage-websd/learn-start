<?xml version="1.0"?>
<config>
    <sections>
        <wordpress translate="label" module="wordpress">
            <groups>
                <fcomment module="sm_commentfacebook" translate="lable">
                    <label>Facebook Comment</label>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled>
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <colorscheme>
                            <label>Colorscheme</label>
                            <frontend_type>select</frontend_type>
                            <source_model>sm_commentfacebook/option_colorscheme</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </colorscheme>
                        <num_posts>
                            <label>Number Show</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </num_posts>
                        <order_by>
                            <label>Order by</label>
                            <frontend_type>select</frontend_type>
                            <source_model>sm_commentfacebook/option_order</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </order_by>
                        <!--<width>
                            <label>Width</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </width>-->
                    </fields>
                </fcomment>
            </groups>
        </wordpress>
    </sections>
</config>