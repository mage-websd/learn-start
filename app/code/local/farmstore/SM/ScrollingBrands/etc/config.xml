<?xml version="1.0"?>
<config>
    <modules>
        <SM_ScrollingBrands>
            <version>0.1.0</version>
        </SM_ScrollingBrands>
    </modules>
    <frontend>
        <routers>
            <scrollingbrands>
                <use>standard</use>
                <args>
                    <module>SM_ScrollingBrands</module>
                    <frontName>scrolling</frontName>
                </args>
            </scrollingbrands>
        </routers>
    </frontend>
    <global>
        <models>
            <sm_scrollingbrands>
                <class>SM_ScrollingBrands_Model</class>
            </sm_scrollingbrands>
        </models>
        <blocks>
            <sm_scrollingbrands>
                <class>SM_ScrollingBrands_Block</class>
            </sm_scrollingbrands>
        </blocks>
        <helpers>
            <sm_scrollingbrands>
                <class>SM_ScrollingBrands_Helper</class>
            </sm_scrollingbrands>
        </helpers>
        <resources>
            <sm_scrollingbrands_setup>
                <setup>
                    <module>SM_ScrollingBrands</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
            </sm_scrollingbrands_setup>
        </resources>
    </global>
    <crontab>
        <jobs>
            <sm_run_all>
                <schedule><cron_expr>* * * * *</cron_expr></schedule>
                <run><model>scrollingbrands/observer::send</model></run>
            </sm_run_all>
        </jobs>
    </crontab>
</config>