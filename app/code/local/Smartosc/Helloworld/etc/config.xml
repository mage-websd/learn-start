<?xml version="1.0"?>
<config>
    <modules>
        <Smartosc_Helloworld>
            <version>0.5.0</version>
        </Smartosc_Helloworld>
    </modules>
    <global>
        <models>
            <helloworld>
                <class>Smartosc_Helloworld_Model</class>
                <resourceModel>helloworld_resource</resourceModel>
            </helloworld>
            <helloworld_resource>
                <class>Smartosc_Helloworld_Model_Resource</class>
                <entities>
                    <datatest>
                        <table>helloworld_datatest</table>
                    </datatest>
                    <data>
                        <table>helloworld_data</table>
                    </data>
                </entities>
            </helloworld_resource>
        </models>

        <blocks>
            <helloworld>
                <class>Smartosc_Helloworld_Block</class>
            </helloworld>
        </blocks>

        <helpers>
            <helloworld>
                <class>Smartosc_Helloworld_Helper</class>
            </helloworld>
        </helpers>

