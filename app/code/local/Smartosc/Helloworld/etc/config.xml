    </global>

    <frontend>        
        <routers>
            <helloworld>
                <use>standard</use>
                <args>
                    <module>Smartosc_Helloworld</module>
                    <frontName>helloworld</frontName>
                </args>
            </helloworld>
        </routers>

        <layout>
            <updates>
                <helloworld>
                    <file>smartosc_helloworld.xml</file>
                </helloworld>
            </updates>
        </layout>
    </frontend>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <helloworld before="Mage_Adminhtml">Smartosc_Helloworld_Adminhtml</helloworld>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <adminhtml>
        <layout>
            <updates>
                <helloworld module="smartosc_helloworld">
                    <file>helloworld.xml</file>
                </helloworld>
            </updates>
        </layout>
    </adminhtml>

