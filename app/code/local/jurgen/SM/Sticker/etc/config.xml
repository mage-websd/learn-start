<?xml version="1.0"?>
<config>
    <modules>
        <SM_Sticker>
            <version>0.5.4</version>
        </SM_Sticker>
    </modules>
    <global>
        <helpers>
            <sticker>
                <class>SM_Sticker_Helper</class>
            </sticker>
        </helpers>

        <models>
            <sticker>
                <class>SM_Sticker_Model</class>
            </sticker>
            <catalog>
                <rewrite>
                    <!--category>SM_Xpermission_Model_Resource_Eav_Mysql4_Category</category>
                    <category_collection>SM_Xpermission_Model_Resource_Eav_Mysql4_Category_Collection</category_collection-->
                    <product>SM_Sticker_Model_Product</product>
                </rewrite>
            </catalog> 			
        </models>

        <resources>
            <sticker_setup>
                <setup>
                    <module>SM_Sticker</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </sticker_setup>
            <sticker_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </sticker_write>
            <sticker_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </sticker_read>
        </resources>
    </global>
	<default>
        <sm_sticker>
            <general>
                <enabled_sale>1</enabled_sale>
                <enabled_new>1</enabled_new>
                <translation_sale>SALE</translation_sale>
                <translation_new>NEW</translation_new>
                <translation_off>OFF</translation_off>
            </general>
        </sm_sticker>
    </default>
    <frontend>
        <layout>
            <updates>
                <sticker>
                    <file>sticker.xml</file>
                </sticker>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <sm_sticker translate="title" module="sticker">
                                            <title>Sale/New Stickers</title>
                                            <sort_order>50</sort_order>
                                        </sm_sticker>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>