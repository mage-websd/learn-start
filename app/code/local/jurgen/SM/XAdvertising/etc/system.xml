<?xml version="1.0"?>
<config>
	<tabs>
        <smartextension translate="label" module="xadvertising">
            <label>Smart Extensions</label>
            <sort_order>100</sort_order>
        </smartextension>
    </tabs>
    <sections>
        <xadvertising translate="label" module="xadvertising">
            <class>separator-top</class>
            <label>XAdvertising</label>
            <tab>smartextension</tab>
            <frontend_type>text</frontend_type>
            <sort_order>45</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <xadvertising translate="label">
                    <label>Base Config</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>99</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label comment">
                            <label>Enable</label>
                            <comment>Enable this extension show on frontend.</comment>
                            <frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
			<userte translate="label">
                            <label>Use WYSIWYG editor</label>
							<comment>If turned on WYSIWYG editor will be used to edit comments.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>28</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </userte>
                        <newwindow translate="label comment">
                            <label>Enable open new window or not</label>
                            <frontend_type>select</frontend_type>
			    <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </newwindow>
                    </fields>
                </xadvertising>
                <frontend translate="label">
                    <label>Frontend Config</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <limited translate="label">
                            <label>Limitted</label>
							<comment>Limit number of products show.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </limited>
                        <orderby translate="label comment">
                            <label>Order by</label>
                            <comment>Choose an option to sort products on frontend.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>xadvertising/config_listoption</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </orderby>
                        <ordertype translate="label comment">
                            <label>Order type</label>
                            <comment>Choose an option to sort type for view products.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>xadvertising/config_listsorttype</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </ordertype>
                    </fields>
                </frontend>
            </groups>
        </xadvertising>
    </sections>
</config>
