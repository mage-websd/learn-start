<?xml version="1.0"?>
<config>
    <modules>
        <SM_Sell>
            <version>0.1.6</version>
        </SM_Sell>
    </modules>
    <global>
        <helpers>
            <sm_sell>
                <class>SM_Sell_Helper</class>
            </sm_sell>
        </helpers>
        <resources>
            <sm_sell_setup>
                <setup>
                    <module>SM_Sell</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </sm_sell_setup>

            <sm_sell_pageall>
                <setup>
                    <module>SM_Sell</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </sm_sell_pageall>
        </resources>
    </global>

    <frontend>
        <routers>
            <SM_Sell>
                <use>standard</use>
                <args>
                    <module>SM_Sell</module>
                    <frontName>sell_exec</frontName>
                </args>
            </SM_Sell>
        </routers>
    </frontend>
</config>