<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
        <block type="smartosc_grocery/layout" name="root"
               template="layout/layout_3col.phtml" output="toHtml">

            <block type="smartosc_grocery/layout" name="head"
                   template="layout/head.phtml">
                <block type="smartosc_grocery/layout" name="head_3col"
                       template="layout/head_3col.phtml"/>
            </block>

            <block type="smartosc_grocery/layout" name="header"
                   template="layout/header.phtml"/>

            <block type="smartosc_grocery/layout" name="left"
                   template="layout/left.phtml" as="left"/>

            <block type="smartosc_grocery/layout" name="content"/>

            <block type="smartosc_grocery/layout" name="right"
                   template="layout/right.phtml"/>

            <block type="smartosc_grocery/layout" name="footer"
                   template="layout/footer.phtml"/>

        </block>

    </default>

    <cms_index_defaultindex>
        <update handle="default"/>

        <reference name="head">
            <action method="setTitlePage">
                <title>Home</title>
            </action>
        </reference>

        <reference name="root">
            <action method="setTemplate">
                <template>layout/layout_1col.phtml</template>
            </action>
            <block name="banner" type="smartosc_grocery/content"
                    template="home/banner.phtml"/>
        </reference>

        <reference name="head">
            <block name="head_1col" type="smartosc_grocery/layout" template="layout/head_1col.phtml"/>
            <remove name="head_3col"></remove>
        </reference>

        <reference name="content">
            <action method="setTemplate">
                <template>index/index.phtml</template>
            </action>
        </reference>
    </cms_index_defaultindex>

    <smartosc_grocery_index_index>
        <update handle="default"/>
        <reference name="content">
            <action method="setTemplate">
                <template>index/index.phtml</template>
            </action>
        </reference>

    </smartosc_grocery_index_index>
</layout>