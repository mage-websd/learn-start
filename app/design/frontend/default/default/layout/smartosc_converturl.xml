            <block type="core/text"
                   name="addtext.after.tagsblock"
                   after="product_tag_list">

                <!--
                    method `setText` to add
                -->
                <action method="addText">
                    <text>
                         Code by giangnt
                    </text>
                </action>
            </block>
        </reference>

    </smartosc_converturl_world_view>
</layout>